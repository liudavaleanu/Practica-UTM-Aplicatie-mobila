<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neurocare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="NeuroCare"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NeuroCare">

        <!-- Activitate principală (launcher) -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activitate pentru login -->
        <activity android:name=".LoginActivity" />

        <!-- Activitate pentru detalii pacient -->
        <activity android:name=".DetaliiPacientActivity" />

        <!-- ✅ Activitate pentru adăugare programări -->
        <activity android:name=".AddAppointmentActivity" />

    </application>
</manifest>
